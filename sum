#include<stdio.h>
void input(int n,int a[n]);
void totalElements(int *n);
int summing(int n,int a[n]);
void output(int sum);
void main(){
    int n;
    int i,sum;
    totalElements(&n);
    int a[n];
    input(n,&a[n]);
    sum = summing( n,&a[n]);
    output(sum);
}
void totalElements(int *n){
    printf("total number to be added");
    scanf("%d",n);
}
void input(int n,int a[n]){
    int i;
    for(i=0;i<n;i++)
    scanf("%d",&a[i]);
}
int summing(int n,int a[n]){
    int i,sum=0;
    for(i=0;i<n;i++)
    sum =sum+a[i];
    return sum;
}
void output(int sum){
    printf("sum is %d",sum);
}
